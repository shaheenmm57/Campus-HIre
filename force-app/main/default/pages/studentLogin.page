            }
            
            .inputOverallContainer {
                position: fixed;
                left: 35%;
                top: 19%;
                height: 250px;
                width: to-fit;
                display: flex;
                flex-direction: column;
            }

            .login_prompt {
                color: #150958;
                font-size: 40px;
                font-family: Inter;
                font-weight: 600;
                word-wrap: break-word;
                width: 50%;
                position: relative;
            }

            .inputFieldContainer {
                flex-direction: row;
                align-items: center;
            	margin-top:10%;
  		  	    display: flex;
    			justify-content: right;
            }
            
            .loginButton{
                color: white;
                border-radius: 10px;
                padding: 10px;
                width: 300px;
                font-size: 24px;
                margin-top: 20%;
                background-color: #150958;
