            .loginButton-new {
                background-color: var(--blue-color);
                color: var(--background-color);
                width: 20vw;
                height: 5vh;
                padding: 2px;
                outline: none;
                border: 2px transparent;
                margin: 0.5vw;
                border-radius: 10px;
                cursor: pointer;
                transition: .3s ease;
                }

            .loginButton-new:hover {
                background-color: var(--blue-color-hover);
                }

            .textField-new{
                
            	display:grid;
            	place-items:center;
                color: black;
                font-weight: 500;
                margin-right: 1vw;
            }
            .inputBox-new{
                width: 20vw;
                height: 5vh;
            	font-weight:500;
                border: 2px solid gray;
                border-radius: 10px;
                display: grid;
                padding: 0 10px;
            }
            .loginPrompt-new{
                font-size: 1.5rem;
                font-weight: 500;
                width: 100%;
                color: #020202;
                text-align: right;
                padding-right: 6vw;
            }
            .inputOverallContainer-new{
                display: grid;
                place-items:center;
                height: 40vh;
            }
            .inputFieldContainer-new{
                     display: grid;
                     grid-template-columns: 7vw 1fr;
            }
            .main-new{
                display: grid;
                place-items:center;
                position: relative;
            }
            .input-main{
                margin-top: 8vh;
                display: grid;
                place-items: center;
                height: 90vh;
                width: 100%;
                background-color: var(--background-color);
                border: 1px solid var(--blue-color);
                border-radius: 8px;
                box-shadow: 0px 1px 10px #150958;
                width: 94vh;
                height: 60vh;
            }

            .login-button{
                display: grid;
                width: 100%;
                padding-right: 1vw;
                justify-content: right;
            }
            .closeErrorButton-new{

            }
            .messageTag-new{
                background: rgb(218, 4, 4);
                height: 8vh; 
                max-width: 60vw; 
                color: white;
                font-size: 1.3rem;
                border-radius: 20px;  
                display: grid;
                grid-template-columns: 1fr 5vw;
                place-items:center;
                
                
            }

            .closeErrortxt-new{
                    margin: 0 4vw;
            }
            .messageDiv-new{
                height: 8vh;
                max-width: 60vw ;
                position: absolute;
                top: 20%;
                left: 36%;

            }

            .closeErrorButton-new{
                     width: 8vh;
                     height: 8vh;
                     border-radius: 50%;
                     border-top-right-radius: 20px;
                     border-bottom-right-radius: 20px;
                     background: white;
                     border:none;
                     font-size: 1.8rem;
                     font-weight: 500;
                     margin-right: -1.4vw;
                     background: rgb(218, 214, 214);
                     cursor: pointer;
                     
            }
            .user-icon{
              height: 5vh;
              margin-right: 2vw;
            }
            .error-image{
                height:18px; 
                width:18px; 
                margin-left:0.5vw;
                margin-right: 1vw;
            }
            .error-alert {
                position: fixed;
                z-index: 1000; 
                top: 8%; 
                left: 50%;
                transform: translate(-50%, -50%);
                display: block;
                padding: 20px;
                border-radius: 10px;
                background-color: var(--red-color);
                color: white;
                margin-bottom: 15px;
                align-items: center;
                justify-content: center;
                align-content: center;
            }
            .alert-animation {
                animation-name: fade;
                animation-duration: 0.5s; /* Adjust the duration as needed */
            }

            @keyframes fade {
                from {
                    opacity: 0;
                }
                to {
                    opacity: 1;
                }
            }
            .reg-text{
                font-size: 12px;
                color: var(--blue-color);
                text-align: center;
            }
        </style>
